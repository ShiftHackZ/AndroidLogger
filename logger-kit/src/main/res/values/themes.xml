<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LoggerKit" />

    <style name="LoggerKit.ImageButton">
        <item name="android:background">@null</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="LoggerKit.HeadingTextAppearance">
        <item name="android:textColor">@color/colorLoggerKitText</item>
        <item name="android:textSize">@dimen/loggerKitHeadingLabelSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LoggerKit.ItemTextAppearance">
        <item name="android:textColor">@color/colorLoggerKitText</item>
        <item name="android:textSize">@dimen/loggerKitItemLabelSize</item>
    </style>

    <style name="LoggerKit.ItemTypeLabelTextAppearance" parent="LoggerKit.ItemTextAppearance">
        <item name="android:textSize">@dimen/loggerKitItemTypeLabelSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LoggerKit.ItemMessageTextAppearance" parent="LoggerKit.ItemTextAppearance">
        <item name="android:textSize">@dimen/loggerKitItemMessageSize</item>
    </style>

    <style name="LoggerKit.ItemStacktraceTextAppearance" parent="LoggerKit.ItemTextAppearance">
        <item name="android:textSize">@dimen/loggerKitItemStacktraceSize</item>
        <item name="android:textColor">@color/colorLoggerKitStacktrace</item>
    </style>
</resources>